            <circle id="toolbar-button-1" stroke="#584B86" stroke-width="2" fill="#FFFFFF" cx="33.5" cy="34.5"
              r="2.5" />
            <circle id="toolbar-button-2" stroke="#584B86" stroke-width="2" fill="#FFFFFF" cx="43.5" cy="34.5"
              r="2.5" />
            <circle id="toolbar-button-3" stroke="#584B86" stroke-width="2" fill="#FFFFFF" cx="53.5" cy="34.5"
